{
  "private": "true",
  "name": "uinix-fp-repo",
  "version": "0.0.0",
  "description": "Monorepo for uinix-fp",
  "license": "MIT",
  "keywords": [
    "uinix",
    "fp",
    "utility",
    "ui"
  ],
  "repository": "uinix-js/uinix-fp",
  "bugs": "https://github.com/uinix-js/uinix-fp/issues",
  "author": "Chris Zhou <chrisrzhou@pm.me> (https://chrisrzhou.io)",
  "funding": [
    {
      "type": "GitHub Sponsors",
      "url": "https://github.com/sponsors/uinix-js"
    }
  ],
  "type": "module",
  "devDependencies": {
    "@types/tape": "^4.13.2",
    "c8": "^7.10.0",
    "tape": "^5.3.2",
    "type-coverage": "^2.19.0",
    "typescript": "^4.5.2",
    "uinix-scripts": "^0.1.2",
    "xo": "^0.46.4"
  },
  "scripts": {
    "build": "npm run clean && tsc && type-coverage",
    "clean": "uinix-scripts clean",
    "lint": "xo --fix",
    "test-coverage": "c8 --check-coverage --all --100 --reporter lcov node test/index.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "prettier": {
    "bracketSpacing": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "strict": true
  },
  "xo": {
    "esnext": false,
    "prettier": true,
    "rules": {
      "unicorn/no-array-callback-reference": "off",
      "unicorn/no-array-reduce": "off"
    },
    "overrides": [
      {
        "files": [
          "test/**/*.js"
        ],
        "rules": {
          "import/no-unassigned-import": "off"
        }
      }
    ]
  }
}
