{
  "name": "uinix-fp",
  "version": "0.2.1",
  "description": "FP utilities for authoring common JS utilities in functional form",
  "license": "MIT",
  "keywords": [
    "uinix",
    "fp",
    "utility",
    "ui"
  ],
  "repository": "uinix-js/uinix-fp",
  "bugs": "https://github.com/uinix-js/uinix-fp/issues",
  "author": "Chris Zhou <chrisrzhou@pm.me> (https://chrisrzhou.io)",
  "type": "module",
  "files": [
    "lib/",
    "index.js",
    "index.d.ts"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "dependencies": {
    "deepmerge": "^4.2.2"
  },
  "devDependencies": {
    "@types/tape": "^4.13.0",
    "c8": "^7.7.2",
    "tape": "^5.2.2",
    "type-coverage": "^2.17.5",
    "typescript": "^4.3.2",
    "uinix-scripts": "^0.1.2",
    "xo": "^0.40.1"
  },
  "scripts": {
    "clean": "uinix-scripts clean",
    "coverage": "npm run type-coverage && npm run test-coverage",
    "lint": "xo --fix",
    "prepack": "npm run clean && npm run coverage && npm run lint",
    "test-coverage": "c8 --check-coverage --lines 100 --functions 100 --branches 100 --reporter lcov node test/index.js",
    "type-coverage": "tsc && type-coverage",
    "test": "npm run prepack"
  },
  "engines": {
    "node": ">=12"
  },
  "prettier": {
    "bracketSpacing": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "strict": true
  },
  "xo": {
    "esnext": false,
    "prettier": true,
    "rules": {
      "unicorn/no-array-callback-reference": "off",
      "unicorn/no-array-for-each": "off",
      "unicorn/no-array-reduce": "off"
    },
    "overrides": [
      {
        "files": [
          "test/**/*.js"
        ],
        "rules": {
          "import/no-unassigned-import": "off"
        }
      }
    ]
  }
}
